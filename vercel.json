{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.js", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/processar-pagamento", "dest": "/api/processar-pagamento.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}